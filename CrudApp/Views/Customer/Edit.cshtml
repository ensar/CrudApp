@model Customer
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Edit</h1>

<div class="row">
    <div class="col-12 d-flex justify-content-center bg-light rounded py-2">
        <form method="post" class="col-5">
            <input type="hidden" asp-for="Id"/>
            <div class="row col-12 mt-4">
                <label asp-for="CustomerName" class="form-label"></label>
                <input asp-for="CustomerName" class="form-control"/>
                <span asp-validation-for="CustomerName" class="text-danger"></span>
            </div>
            <div class="row col-12 mt-4">
                <label asp-for="CustomerJob" class="form-label"></label>
                <input asp-for="CustomerJob" class="form-control"/>
                <span asp-validation-for="CustomerJob" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-outline-warning mt-4">Edit</button>
        </form>
    </div>
</div>

